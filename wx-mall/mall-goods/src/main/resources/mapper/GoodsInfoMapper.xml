<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wx.mall.mapper.GoodsInfoMapper">

    <!--更新商品点击量-->
    <update id="updateClickRateById" parameterType="integer">
        update goods_info set clickRate = clickRate+1 where id = #{id}
    </update>

</mapper>
